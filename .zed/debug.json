[
  {
    "label": "Attach NestJS (Docker)",
    "adapter": "JavaScript",
    "type": "pwa-node",
    "request": "attach",
    "address": "localhost",
    "port": 9229,
    "cwd": "${ZED_WORKTREE_ROOT}",
    "localRoot": "${ZED_WORKTREE_ROOT}/src",
    "remoteRoot": "/usr/src/app/src",
    "skipFiles": ["<node_internals>/**", "node_modules/**"],
    "resolveSourceMapLocations": [
      "${ZED_WORKTREE_ROOT}/**",
      "!**/node_modules/**"
    ],

    "timeout": 60000
  }
]
